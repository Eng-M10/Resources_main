generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}
// schema.prisma


model Clientes {
  id       String      @id @default(uuid())
  nome     String     @unique
  password String 
  recursos Recursos[]
}


model Recursos {
  id          String      @id @default(uuid())
  nome        String      
  disponivel  Boolean  @default(true)
  reservaId   String?     @unique
  clienteId   String?     
  cliente     Clientes? @relation(fields: [reservaId], references: [id])
}
